{
    "manifest_version": 2,
    "name": "Fake News Detector",
    "version": "1.0",
    "permissions": [
        "tabs"
     ],
    "description": "An√°lisa a probabilidade da noticia ser falsa",
    "icons": {
        "32": "news-32.png",
        "128": "news-32.png"
    },
    
    "background":{
        "scripts": ["src/background.js"],
        "persustent": false
    },
    "browser_action": {
        "default_icon": {
            "19": "news-32.png",
            "38": "news-32.png"
        },
        "default_title": "Fake news Detector",
        "default_popup": "src/pages/index.html"
    },
    "content_scripts": [
        {
            "js": [
                "src/components/buttonNoticia.js",
                "src/services/analisaNoticia.js",
                "src/main.js"
                
            ],
            "matches": [
                "<all_urls>"
            ]

        }
    ]
    
}